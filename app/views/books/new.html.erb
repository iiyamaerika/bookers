<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book,local:true do |f| %>
<p><%= form.label :title %><br>
<%= form.text_filed :title %>
</p>

<p>
  <%= form.label :body %><br>
  <%= form.text_area :body %>
</p>

<p>
  <%= form.submit %>
</p>
<% end %>