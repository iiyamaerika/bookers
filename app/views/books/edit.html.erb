<h1>Editing Book</h1>
<%= render 'layouts/error_messages', book: @book %>

<%= form_with model:@book, url:"/books/#{@book.id}", local: true do |f| %>
<div class="field">
<label for="book_title">Title</label>
<%= f.text_field :title %>
</div>

<div class="field">
<label for="book_body">Body</label>
<%= f.text_area :body%>
</div>

<div class="actions">
  <%= f.submit 'Update Book' %>
</div>

<% end %>
<%= link_to "show",book_path(@book) %>
" | "
<%= link_to "back",books_path %>
