   <p id="notice"></p>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td class="book-title"><%= book.title %></td>
          <td class="book-text"><%= book.body %></td>
          <td>
            <%= link_to "Show",book_path(book) %>
          </td>
          <td>
            <%= link_to "Edit",edit_book_path(book) %>
          </td>
          <td>
            <%= link_to "Destroy",book_path(book),method: :delete ,data: {confirm: "Are you sure?"}%>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <h2>New book</h2>
    <%= render 'layouts/error_messages', book: @book %>
    <%= form_with model: @book, url:'/books', local:true do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>
      <%= f.submit 'Create Book' %>
    <% end %>
